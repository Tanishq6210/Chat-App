<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chat_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/chat_from_bg"
        android:maxWidth="240dp"
        android:padding="10dp"
        android:text="Hello I am Tanishq Tyagi"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/civ_chat_to_row"
        app:layout_constraintEnd_toStartOf="@+id/civ_chat_to_row"
        app:layout_constraintTop_toTopOf="@+id/civ_chat_to_row" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_chat_to_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_border_color="@color/design_default_color_primary"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>